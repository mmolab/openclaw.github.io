---
/**
 * About page
 * URL: /about
 */
import PageLayout from '@/layouts/PageLayout.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import Badge from '@/components/ui/data-display/Badge/Badge.astro';
import Card from '@/components/ui/data-display/Card/Card.astro';
import { Hero } from '@/components/hero';
---

<PageLayout
  title="About Us"
  description="Learn about Velocity and the team behind it."
>
  <Hero layout="centered" size="sm" showGrid>
    <Badge slot="badge" pill pulse>Our Story</Badge>

    <h1 slot="title">
      Built by developers, <span class="text-brand-500">for developers.</span>
    </h1>

    <p slot="description">
      Velocity was born from the frustration of setting up the same tooling over and over.
      We decided to create the starter we always wished existed.
    </p>
  </Hero>

  <!-- Mission Section -->
  <section class="py-20 bg-surface-invert">
    <div class="mx-auto max-w-4xl px-6 text-center">
      <h2 class="font-display text-3xl md:text-4xl font-bold text-on-invert mb-6">
        Our Mission
      </h2>
      <p class="text-lg text-on-invert-secondary max-w-2xl mx-auto leading-relaxed">
        To help developers ship beautiful, performant websites faster by eliminating
        boilerplate and providing sensible defaults.
      </p>
    </div>
  </section>

  <!-- Values Section -->
  <section class="py-20">
    <div class="mx-auto max-w-6xl px-6">
      <h2 class="font-display text-3xl md:text-4xl font-bold text-foreground mb-12 text-center">
        What We Believe
      </h2>

      <div class="grid gap-8 md:grid-cols-3">
        <!-- Performance -->
        <Card hover>
          <div class="flex items-start gap-4">
            <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-brand-500/20 to-brand-500/5 flex items-center justify-center text-brand-500 shrink-0">
              <Icon name="zap" size="md" />
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-base font-bold text-foreground">Performance First</h3>
              <p class="text-sm text-foreground-muted leading-relaxed mt-1.5">
                Every decision is made with performance in mind. Zero JavaScript by default,
                optimized images, and minimal CSS.
              </p>
            </div>
          </div>
        </Card>

        <!-- Simplicity -->
        <Card hover>
          <div class="flex items-start gap-4">
            <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-brand-500/20 to-brand-500/5 flex items-center justify-center text-brand-500 shrink-0">
              <Icon name="box" size="md" />
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-base font-bold text-foreground">Simplicity Matters</h3>
              <p class="text-sm text-foreground-muted leading-relaxed mt-1.5">
                We strip away complexity so you can focus on what matters: building
                great products for your users.
              </p>
            </div>
          </div>
        </Card>

        <!-- Open Source -->
        <Card hover>
          <div class="flex items-start gap-4">
            <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-brand-500/20 to-brand-500/5 flex items-center justify-center text-brand-500 shrink-0">
              <Icon name="github" size="md" />
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-base font-bold text-foreground">Open Source</h3>
              <p class="text-sm text-foreground-muted leading-relaxed mt-1.5">
                Velocity is free and open source. We believe in giving back to the
                community that made this possible.
              </p>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </section>
</PageLayout>
