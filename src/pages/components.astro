---
import LandingLayout from '@/layouts/LandingLayout.astro';
// Form Components
import Button from '@/components/ui/form/Button/Button.astro';
import Input from '@/components/ui/form/Input/Input.astro';
import Textarea from '@/components/ui/form/Textarea/Textarea.astro';
import Select from '@/components/ui/form/Select/Select.astro';
import Checkbox from '@/components/ui/form/Checkbox/Checkbox.astro';
import Radio from '@/components/ui/form/Radio/Radio.astro';
import Switch from '@/components/ui/form/Switch/Switch.astro';
// Data Display Components
import Card from '@/components/ui/data-display/Card/Card.astro';
import Badge from '@/components/ui/data-display/Badge/Badge.astro';
import Avatar from '@/components/ui/data-display/Avatar/Avatar.astro';
import AvatarGroup from '@/components/ui/data-display/AvatarGroup/AvatarGroup.astro';
import Table from '@/components/ui/data-display/Table/Table.astro';
import Pagination from '@/components/ui/data-display/Pagination/Pagination.astro';
import Progress from '@/components/ui/data-display/Progress/Progress.astro';
import Skeleton from '@/components/ui/data-display/Skeleton/Skeleton.astro';
// Feedback Components
import Alert from '@/components/ui/feedback/Alert/Alert.astro';
import { ToastDemo } from '@/components/ui/feedback/Toast';
import Tooltip from '@/components/ui/feedback/Tooltip/Tooltip.astro';
// Overlay Components
import Dialog from '@/components/ui/overlay/Dialog/Dialog.astro';
import Dropdown from '@/components/ui/overlay/Dropdown/Dropdown.astro';
import Tabs from '@/components/ui/overlay/Tabs/Tabs.astro';
import VerticalTabs from '@/components/ui/overlay/VerticalTabs/VerticalTabs.astro';
import Accordion from '@/components/ui/overlay/Accordion/Accordion.astro';
// Layout Components
import Separator from '@/components/ui/layout/Separator/Separator.astro';
// Primitives
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
// Marketing Components
import CTA from '@/components/ui/marketing/CTA/CTA.astro';
import SocialProof from '@/components/ui/marketing/SocialProof/SocialProof.astro';
// Other Components
import { Hero } from '@/components/hero';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import SearchInput from '@/components/patterns/SearchInput.astro';
import PasswordInput from '@/components/patterns/PasswordInput.astro';
import StatCard from '@/components/patterns/StatCard.astro';
import EmptyState from '@/components/patterns/EmptyState.astro';

// Component categories for navigation
const categories = [
  { id: 'hero', label: 'Hero', icon: 'star' },
  { id: 'layout', label: 'Layout', icon: 'layout' },
  { id: 'buttons', label: 'Buttons', icon: 'box' },
  { id: 'inputs', label: 'Form Inputs', icon: 'terminal' },
  { id: 'feedback', label: 'Feedback', icon: 'alert-circle' },
  { id: 'overlays', label: 'Overlays', icon: 'layers' },
  { id: 'navigation', label: 'Navigation', icon: 'menu' },
  { id: 'data', label: 'Data Display', icon: 'layers' },
  { id: 'loading', label: 'Loading', icon: 'loader' },
  { id: 'toggles', label: 'Toggles', icon: 'toggle-left' },
  { id: 'patterns', label: 'Patterns', icon: 'layers' },
];
---

<LandingLayout
  title="Components"
  description="Explore Velocity's comprehensive UI component library. Production-ready, accessible, and beautifully designed."
>

  <!-- Hero Section -->
  <Hero layout="split" size="lg" showGrid showBlob>
    <Badge slot="badge" pill pulse>50+ Production Components</Badge>

    <h1 slot="title">
      Component <span class="text-brand-500">Library</span>
    </h1>

    <p slot="description">
      Production-ready UI primitives built with accessibility and performance in mind.
      Copy, paste, and customize to match your brand.
    </p>

    <Fragment slot="actions">
      <Button href="#hero">
        Browse Components
        <Icon name="arrow-right" size="sm" />
      </Button>
      <Button variant="outline" href="https://github.com/southwellmedia/velocity" target="_blank">
        <Icon name="github" size="sm" />
        View Source
      </Button>
    </Fragment>
  </Hero>

  <!-- Category Navigation -->
  <nav class="sticky top-16 z-40 bg-background/95 backdrop-blur-md border-y border-border">
    <div class="mx-auto max-w-6xl px-6">
      <div class="flex items-center gap-1 py-3 overflow-x-auto scrollbar-hide">
        {categories.map((cat) => (
          <a
            href={`#${cat.id}`}
            class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-foreground-muted hover:text-foreground hover:bg-secondary rounded-md transition-all whitespace-nowrap group"
          >
            <Icon name={cat.icon} size="sm" class="text-foreground-subtle group-hover:text-brand-500 transition-colors" />
            {cat.label}
          </a>
        ))}
      </div>
    </div>
  </nav>

  <!-- Components Showcase -->
  <div class="mx-auto max-w-6xl px-6 py-20 space-y-32">

    <!-- Hero Section -->
    <section id="hero" class="scroll-mt-32">
      <div class="flex items-start gap-5 mb-10">
        <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-brand-500/10 text-brand-500 shrink-0">
          <Icon name="star" size="lg" />
        </div>
        <div>
          <h2 class="font-display text-2xl font-bold text-foreground">Hero</h2>
          <p class="text-foreground-muted mt-1">Flexible hero sections with multiple layouts, backgrounds, and slot-based content injection.</p>
        </div>
      </div>

      <div class="space-y-6">
        <!-- Hero - Split Layout -->
        <div class="component-showcase">
          <div class="showcase-header">
            <span class="showcase-label">Split Layout</span>
            <span class="showcase-hint">Two-column with aside slot</span>
          </div>
          <div class="showcase-content !p-0 overflow-hidden rounded-b-xl">
            <Hero layout="split" size="md" showGrid class="!pt-12 !pb-12">
              <Badge slot="badge" pill pulse>New Release</Badge>

              <h2 slot="title">
                Build faster with <span class="text-brand-500">Velocity</span>
              </h2>

              <p slot="description">
                A modern starter kit for production websites.
              </p>

              <Fragment slot="actions">
                <Button size="sm">Get Started</Button>
                <Button size="sm" variant="outline">Learn More</Button>
              </Fragment>

              <div slot="aside" class="bg-background-secondary border border-border rounded-lg p-6 text-center">
                <Icon name="code" size="lg" class="text-brand-500 mx-auto mb-2" />
                <p class="text-sm text-foreground-muted">Aside content slot</p>
              </div>

              <SocialProof
                class="mt-[var(--space-stack-lg)]"
                text="Trusted by developers"
                avatars={[
                  'https://i.pravatar.cc/150?img=12',
                  'https://i.pravatar.cc/150?img=33',
                  'https://i.pravatar.cc/150?img=47',
                ]}
              />
            </Hero>
          </div>
        </div>

        <!-- Hero - Centered Layout -->
        <div class="component-showcase">
          <div class="showcase-header">
            <span class="showcase-label">Centered Layout</span>
            <span class="showcase-hint">Single column, center-aligned</span>
          </div>
          <div class="showcase-content !p-0 overflow-hidden rounded-b-xl">
            <Hero layout="centered" size="md" class="!pt-12 !pb-12">
              <Badge slot="badge">About Us</Badge>

              <h2 slot="title">
                We're on a <span class="text-brand-500">mission</span>
              </h2>

              <p slot="description">
                Building the tools developers love to use. Our team is dedicated to creating exceptional experiences.
              </p>

              <Fragment slot="actions">
                <Button size="sm">Meet the Team</Button>
                <Button size="sm" variant="ghost">Our Story</Button>
              </Fragment>
            </Hero>
          </div>
        </div>

        <!-- Hero Backgrounds Grid -->
        <div class="grid gap-6 lg:grid-cols-2">
          <!-- Secondary Background -->
          <div class="component-showcase">
            <div class="showcase-header">
              <span class="showcase-label">Secondary Background</span>
            </div>
            <div class="showcase-content !p-0 overflow-hidden rounded-b-xl">
              <Hero layout="split" size="sm" class="!pt-8 !pb-8 bg-surface-secondary">
                <h2 slot="title">Secondary Background</h2>
                <p slot="description">Subtle elevation from the default background.</p>
              </Hero>
            </div>
          </div>

          <!-- Gradient Background -->
          <div class="component-showcase">
            <div class="showcase-header">
              <span class="showcase-label">Gradient Background</span>
            </div>
            <div class="showcase-content !p-0 overflow-hidden rounded-b-xl">
              <Hero layout="split" size="sm" class="!pt-8 !pb-8 bg-gradient-to-br from-background via-background to-background-secondary">
                <h2 slot="title">Gradient Background</h2>
                <p slot="description">Smooth gradient transition effect.</p>
              </Hero>
            </div>
          </div>
        </div>

        <!-- Inverted Background (Full Width) -->
        <div class="component-showcase">
          <div class="showcase-header">
            <span class="showcase-label">Inverted Background</span>
            <span class="showcase-hint">Always dark, regardless of theme</span>
          </div>
          <div class="showcase-content !p-0 overflow-hidden rounded-b-xl">
            <Hero layout="centered" size="sm" class="invert-section !pt-10 !pb-10 bg-background">
              <h2 slot="title">
                <span class="text-foreground">Dark mode </span><span class="text-brand-400">always</span>
              </h2>

              <p slot="description" class="text-foreground-secondary">
                Perfect for CTAs and sections that need to stand out.
              </p>

              <Fragment slot="actions">
                <Button size="sm">Primary Action</Button>
                <Button size="sm" variant="outline">
                  Secondary
                </Button>
              </Fragment>

              <SocialProof
                class="mt-[var(--space-stack-lg)]"
                text="Join thousands of users"
                avatars={[
                  'https://i.pravatar.cc/150?img=5',
                  'https://i.pravatar.cc/150?img=8',
                  'https://i.pravatar.cc/150?img=11',
                ]}
              />
            </Hero>
          </div>
        </div>

        <!-- Size Variations -->
        <div class="component-showcase">
          <div class="showcase-header">
            <span class="showcase-label">Size Variations</span>
            <span class="showcase-hint">sm, md, lg, xl padding options</span>
          </div>
          <div class="showcase-content">
            <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
              {(['sm', 'md', 'lg', 'xl'] as const).map((size) => (
                <div class="border border-border rounded-lg overflow-hidden">
                  <div class="bg-background-secondary px-3 py-1.5 border-b border-border">
                    <span class="text-xs font-mono text-foreground-muted">size="{size}"</span>
                  </div>
                  <div class="bg-background text-center py-2">
                    <span class="text-xs text-foreground-subtle">
                      {size === 'sm' && 'Compact padding'}
                      {size === 'md' && 'Default padding'}
                      {size === 'lg' && 'Large padding'}
                      {size === 'xl' && 'Extra-large padding'}
                    </span>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Props Reference -->
        <div class="component-showcase">
          <div class="showcase-header">
            <span class="showcase-label">Available Props</span>
            <span class="showcase-hint">Simplified API (composition-first)</span>
          </div>
          <div class="showcase-content">
            <div class="grid gap-4 sm:grid-cols-2 text-sm">
              <div>
                <h4 class="font-semibold text-foreground mb-2">Props</h4>
                <ul class="space-y-1 text-foreground-muted">
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">layout</code> centered | split</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">size</code> sm | md | lg | xl</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">showGrid</code> boolean</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">showBlob</code> boolean</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">blobPosition</code> left | right | center</li>
                </ul>
              </div>
              <div>
                <h4 class="font-semibold text-foreground mb-2">Slots</h4>
                <ul class="space-y-1 text-foreground-muted">
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">badge</code> Use Badge component</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">title</code> Use h1/h2 directly</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">description</code> Use p directly</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">actions</code> CTA buttons</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">aside</code> Side content (split only)</li>
                </ul>
              </div>
            </div>
            <p class="text-xs text-foreground-subtle mt-4">
              <strong>Backgrounds:</strong> Use CSS classes for custom backgrounds (e.g., <code class="bg-secondary px-1 rounded">class="bg-surface-invert"</code>)
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Layout Section (Header & Footer) -->
    <section id="layout" class="scroll-mt-32">
      <div class="flex items-start gap-5 mb-10">
        <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-brand-500/10 text-brand-500 shrink-0">
          <Icon name="layout" size="lg" />
        </div>
        <div>
          <h2 class="font-display text-2xl font-bold text-foreground">Layout</h2>
          <p class="text-foreground-muted mt-1">Header and Footer components for consistent page structure. Variant-based with full customization via design tokens.</p>
        </div>
      </div>

      <div class="space-y-6">
        <!-- Header Default Layout -->
        <div class="component-showcase">
          <div class="showcase-header">
            <span class="showcase-label">Default Layout</span>
            <span class="showcase-hint">Logo left, nav + actions right-aligned</span>
          </div>
          <div class="showcase-content !p-0 overflow-hidden rounded-b-xl">
            <Header
              position="static"
              showMobileMenu={false}
              showCta
              cta={{ label: 'Get Started', href: '#' }}
              nav={[{ label: 'Features', href: '#' }, { label: 'Pricing', href: '#' }, { label: 'Docs', href: '#' }, { label: 'Blog', href: '#' }]}
              actions={[{ icon: 'github', href: '#', label: 'GitHub', iconOnly: true }]}
            />
          </div>
        </div>

        <!-- Minimal Layout -->
        <div class="component-showcase">
          <div class="showcase-header">
            <span class="showcase-label">Minimal Layout</span>
            <span class="showcase-hint">Logo + CTA only, no navigation</span>
          </div>
          <div class="showcase-content !p-0 overflow-hidden rounded-b-xl">
            <Header
              layout="minimal"
              position="static"
              showMobileMenu={false}
              showCta
              cta={{ label: 'Sign In', href: '#' }}
            />
          </div>
        </div>

        <!-- Nav-only (no actions) -->
        <div class="component-showcase">
          <div class="showcase-header">
            <span class="showcase-label">Nav Only</span>
            <span class="showcase-hint">No CTA, no actions, just navigation</span>
          </div>
          <div class="showcase-content !p-0 overflow-hidden rounded-b-xl">
            <Header
              position="static"
              showMobileMenu={false}
              showThemeToggle={false}
              showCta={false}
              nav={[{ label: 'Home', href: '#' }, { label: 'About', href: '#' }, { label: 'Services', href: '#' }, { label: 'Contact', href: '#' }]}
            />
          </div>
        </div>

        <!-- Header Size Variants -->
        <div class="component-showcase">
          <div class="showcase-header">
            <span class="showcase-label">Size Variants</span>
            <span class="showcase-hint">sm (48px), md (56px), lg (64px)</span>
          </div>
          <div class="showcase-content !p-0 overflow-hidden rounded-b-xl">
            <div class="divide-y divide-border">
              {(['sm', 'md', 'lg'] as const).map((size) => (
                <div>
                  <div class="bg-background-secondary/50 px-4 py-2 border-b border-border flex items-center justify-between">
                    <span class="text-xs font-mono text-foreground-muted">size="{size}"</span>
                    <span class="text-xs text-foreground-subtle">
                      {size === 'sm' && 'h-12 (48px) — compact'}
                      {size === 'md' && 'h-14 (56px) — default'}
                      {size === 'lg' && 'h-16 (64px) — spacious'}
                    </span>
                  </div>
                  <Header
                    position="static"
                    size={size}
                    showMobileMenu={false}
                    nav={[{ label: 'Features', href: '#' }, { label: 'Pricing', href: '#' }, { label: 'Docs', href: '#' }]}
                    showCta
                    cta={{ label: 'Get Started', href: '#' }}
                  />
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Header Background Variants -->
        <div class="component-showcase">
          <div class="showcase-header">
            <span class="showcase-label">Background Variants</span>
            <span class="showcase-hint">default, solid, transparent</span>
          </div>
          <div class="showcase-content !p-0 overflow-hidden rounded-b-xl">
            <div class="divide-y divide-border">
              <!-- Default with blur -->
              <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-r from-brand-100 to-brand-200 dark:from-brand-900/30 dark:to-brand-800/30"></div>
                <div class="relative">
                  <div class="bg-background/80 backdrop-blur-sm px-4 py-2 border-b border-border">
                    <span class="text-xs font-mono text-foreground-muted">variant="default"</span>
                    <span class="text-xs text-foreground-subtle ml-2">— backdrop blur + transparency</span>
                  </div>
                  <Header position="static" size="sm" variant="default" showMobileMenu={false} nav={[{ label: 'Home', href: '#' }, { label: 'About', href: '#' }]} />
                </div>
              </div>
              <!-- Solid -->
              <div>
                <div class="bg-background-secondary/50 px-4 py-2 border-b border-border">
                  <span class="text-xs font-mono text-foreground-muted">variant="solid"</span>
                  <span class="text-xs text-foreground-subtle ml-2">— opaque background</span>
                </div>
                <Header position="static" size="sm" variant="solid" showMobileMenu={false} nav={[{ label: 'Home', href: '#' }, { label: 'About', href: '#' }]} />
              </div>
              <!-- Transparent on light image -->
              <div class="relative overflow-hidden">
                <div
                  class="absolute inset-0 bg-cover bg-center grayscale brightness-150 opacity-60"
                  style="background-image: url('https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=1200&h=200&fit=crop&q=80');"
                ></div>
                <div class="absolute inset-0 bg-white/20"></div>
                <div class="relative">
                  <div class="bg-white/60 backdrop-blur-sm px-4 py-2 border-b border-black/10">
                    <span class="text-xs font-mono text-black/70">variant="transparent"</span>
                    <span class="text-xs text-black/50 ml-2">— light background, dark text</span>
                  </div>
                  <Header
                    position="static"
                    size="md"
                    variant="transparent"
                    showMobileMenu={false}
                    showCta
                    cta={{ label: 'Explore', href: '#' }}
                    nav={[{ label: 'Home', href: '#' }, { label: 'Gallery', href: '#' }, { label: 'Contact', href: '#' }]}
                  />
                </div>
              </div>
              <!-- Transparent on dark (inverted colors) -->
              <div
                class="relative bg-cover bg-center"
                style="background-image: url('https://images.unsplash.com/photo-1451187580459-43490279c0fa?w=1200&h=200&fit=crop&q=80');"
              >
                <div class="absolute inset-0 bg-black/40"></div>
                <div class="relative">
                  <div class="bg-black/30 backdrop-blur-sm px-4 py-2 border-b border-white/10">
                    <span class="text-xs font-mono text-white/90">variant="transparent" colorScheme="invert"</span>
                    <span class="text-xs text-white/70 ml-2">— for dark backgrounds</span>
                  </div>
                  <Header
                    position="static"
                    size="md"
                    variant="transparent"
                    colorScheme="invert"
                    showMobileMenu={false}
                    showCta
                    cta={{ label: 'Explore', href: '#' }}
                    nav={[{ label: 'Home', href: '#' }, { label: 'Gallery', href: '#' }, { label: 'Contact', href: '#' }]}
                  />
                </div>
              </div>
            </div>
          </div>
        </div>


        <!-- Header Props Reference -->
        <div class="component-showcase">
          <div class="showcase-header">
            <span class="showcase-label">Header Props</span>
            <span class="showcase-hint">Full API reference</span>
          </div>
          <div class="showcase-content">
            <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 text-sm">
              <div>
                <h4 class="font-semibold text-foreground mb-2">Layout & Position</h4>
                <ul class="space-y-1 text-foreground-muted">
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">layout</code> default | centered | minimal</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">position</code> fixed | sticky | static</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">size</code> sm | md | lg</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">variant</code> default | solid | transparent</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">colorScheme</code> default | invert</li>
                </ul>
              </div>
              <div>
                <h4 class="font-semibold text-foreground mb-2">Navigation</h4>
                <ul class="space-y-1 text-foreground-muted">
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">nav</code> NavItem[] (overrides routes)</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">extraNav</code> NavItem[] (adds to routes)</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">showActiveState</code> boolean</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">showMobileMenu</code> boolean</li>
                </ul>
              </div>
              <div>
                <h4 class="font-semibold text-foreground mb-2">Actions</h4>
                <ul class="space-y-1 text-foreground-muted">
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">showCta</code> boolean</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">cta</code> {'{ label, href }'}</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">actions</code> HeaderAction[]</li>
                  <li><code class="text-xs bg-secondary px-1.5 py-0.5 rounded">showThemeToggle</code> boolean</li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Footer Component -->
        <div class="component-showcase">
          <div class="showcase-header">
            <span class="showcase-label">Footer - Simple Layout</span>
            <span class="showcase-hint">Single row with logo, nav, optional social</span>
          </div>
          <div class="showcase-content !p-0 overflow-hidden rounded-b-xl">
            <Footer
              layout="simple"
              background="secondary"
              showCopyright={false}
              socialLinks={[
                { platform: 'github', href: '#' },
                { platform: 'twitter', href: '#' },
              ]}
            />
          </div>
        </div>

        <!-- Footer Minimal Layout -->
        <div class="component-showcase">
          <div class="showcase-header">
            <span class="showcase-label">Minimal Layout</span>
            <span class="showcase-hint">Copyright only — perfect for simple sites</span>
          </div>
          <div class="showcase-content !p-0 overflow-hidden rounded-b-xl">
            <Footer
              layout="minimal"
              copyright="© {year} {siteName}"
            />
          </div>
        </div>

        <!-- Footer Stacked Layout -->
        <div class="component-showcase">
